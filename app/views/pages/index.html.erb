<h1>My tasks </h1>
<ul>
<% @tasks.each do |task| %>
<% if task.checked %>
  <li><input type="checkbox" checked ><%= link_to task.todo, task_path(task) %></li>
<%else%>
<li><input type="checkbox" > <%= link_to task.todo, task_path(task) %></li>
<%end%>
<%end%>
</ul>

<%= link_to "New task", new_task_path  %>

